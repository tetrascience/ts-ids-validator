{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ids.tetrascience.com/common/vapor-sorption-analyzer-tainstruments-vti-sa/v1.0.0/schema.json",
  "type": "object",
  "definitions": {
    "minuteTimeValueUnit": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "const": "MinuteTime"
        }
      }
    },
    "percentageValueUnit": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "const": "Percent"
        }
      }
    },
    "generalValueUnit": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        }
      }
    }
  },
  "required": ["@idsNamespace", "@idsType", "@idsVersion"],
  "properties": {
    "@idsNamespace": {
      "type": "string",
      "const": "common"
    },
    "@idsType": {
      "type": "number",
      "const": "vapor-sorption-analyzer-tainstruments-vti-sa"
    },
    "@idsVersion": {
      "type": "string",
      "const": ""
    },
    "run": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "time": {
      "type": "object",
      "properties": {
        "measurement": {
          "type": "string"
        }
      }
    },
    "user": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "sample": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "lot": {
          "type": "string"
        },
        "note": {
          "type": "string"
        }
      }
    },
    "method": {
      "type": "object",
      "properties": {
        "sample_preparation": {
          "type": "object",
          "properties": {
            "drying_temperature": {
              "type": "object",
              "$ref": "#/definitions/generalValueUnit"
            },
            "heating_rate": {
              "type": "object",
              "$ref": "#/definitions/generalValueUnit"
            },
            "maximum_drying_time": {
              "type": "object",
              "$ref": "#/definitions/minuteTimeValueUnit"
            },
            "equilibrium_criteria": {
              "type": "object",
              "properties": {
                "duration": {
                  "type": "object",
                  "$ref": "#/definitions/minuteTimeValueUnit"
                },
                "weight_change": {
                  "type": "object",
                  "$ref": "#/definitions/percentageValueUnit"
                }
              }
            }
          }
        },
        "sample_testing": {
          "type": "object",
          "properties": {
            "temperature": {
              "type": "object",
              "$ref": "#/definitions/generalValueUnit"
            },
            "maximum_equilibrium_time": {
              "type": "object",
              "$ref": "#/definitions/minuteTimeValueUnit"
            },
            "equilibrium_criteria": {
              "type": "object",
              "properties": {
                "duration": {
                  "type": "object",
                  "$ref": "#/definitions/minuteTimeValueUnit"
                },
                "weight_change": {
                  "type": "object",
                  "$ref": "#/definitions/percentageValueUnit"
                }
              }
            },
            "relative_humidity": {
              "type": "object",
              "properties": {
                "start": {
                  "type": "object",
                  "$ref": "#/definitions/percentageValueUnit"
                },
                "peak": {
                  "type": "object",
                  "$ref": "#/definitions/percentageValueUnit"
                },
                "end": {
                  "type": "object",
                  "$ref": "#/definitions/percentageValueUnit"
                },
                "increment": {
                  "type": "object",
                  "$ref": "#/definitions/percentageValueUnit"
                }
              }
            },
            "data_logging_interval": {
              "type": "string"
            }
          }
        }
      }
    },
    "datacubes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "measures": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "unit": {
                  "type": "string"
                },
                "value": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          },
          "dimensions": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "unit": {
                  "type": "string"
                },
                "scale": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
