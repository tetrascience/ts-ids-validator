{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://ids.tetrascience.com/common/plate-reader-tecan-sunrise/v1.0.0/schema.json",
  "type": "object",
  "properties": {
    "@idsType": {
      "type": "string",
      "const": "plate-reader-tecan-sunrise"
    },
    "@idsVersion": {
      "type": "string",
      "const": "v1.0.0"
    },
    "@idsNamespace": {
      "type": "string",
      "const": "common"
    },
    "system": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "vendor": {
          "type": "string",
          "const": "Tecan"
        },
        "serial_number": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "const": "plate reader"
        },
        "firmware": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string"
            }
          }
        },
        "software": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          }
        }
      }
    },
    "datetime": {
      "type": "string"
    },
    "method": {
      "type": "object",
      "properties": {
        "measurement": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string"
            },
            "wavelength": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "number"
                },
                "unit": {
                  "type": "string"
                }
              }
            }
          }
        },
        "read_mode": {
          "type": "string"
        }
      }
    },
    "datacubes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "measures": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "unit": {
                  "type": "string",
                  "const": "ArbitraryUnit"
                },
                "value": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "dimensions": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "unit": {
                  "type": "string",
                  "const": "Unitless"
                },
                "scale": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
